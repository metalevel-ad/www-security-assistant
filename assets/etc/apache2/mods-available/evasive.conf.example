<IfModule mod_evasive20.c>
    DOSHashTableSize    3097
    DOSPageCount        10
    DOSSiteCount        70
    DOSPageInterval     3
    DOSSiteInterval     3
    DOSBlockingPeriod   10

    #DOSEmailNotify     email@example.com
    DOSLogDir           "/var/log/apache2_mod_evasive"
    DOSSystemCommand    "sudo /etc/wwwsas/wwwsas.sh %s 'ModEvasive' 'AutoMode' >> /etc/wwwsas/tmp/execution.log 2>&1"
    
    DOSWhitelist        127.0.0.1 127.0.0.255  
</IfModule>
